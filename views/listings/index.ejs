<% layout("layouts/boilerplate") %>

<body>
    <h1>All Listings</h1>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 ">
        <% for(let listings of alllistings){ %>
            <a href="listings/<%= listings._id%>" class="listing_link">
                <div class="card col">
                    <img src="<%=listings.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listings.title %></b>
                        <br>
                        &#8377;<%= listings.price.toLocaleString("en-IN") %>
                    </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>

