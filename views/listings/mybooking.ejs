<% layout("/layouts/boilerplate") %>

<h2 class="mb-4">My Bookings</h2>

<% if (booking.length === 0) { %>
  <p>You have no bookings yet.</p>
<% } else { %>
  <% booking.forEach(booking => { %>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= booking.listingId.image %>" class="img-fluid" alt="<%= booking.listingId.title %>">
        </div>
        <div class="col-md-8 " >
          <div class="card-body ms-md-5">
            <h5 class="card-title"><%= booking.listingId.title %></h5>
            <p class="card-text">
              <strong>Location:</strong> <%= booking.listingId.location %><br>
              <strong>Check-in:</strong> <%= booking.checkIn.toDateString() %><br>
              <strong>Check-out:</strong> <%= booking.checkOut.toDateString() %><br>
              <strong>Guests:</strong> <%= booking.guests %><br>
            </p>
            <p class="card-text">
              <small class="text-muted">Price: â‚¹<%= booking.listingId.price %></small>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% }); %>
<% } %>
